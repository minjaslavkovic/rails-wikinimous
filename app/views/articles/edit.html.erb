<h1><%= link_to 'Wikinimous', articles_path %></h1>

<p><%= link_to "New article", new_article_path %></p>

<h1>Edit article</h1>

<%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>


<p><%= link_to "Show", article_path(@article) %></p>
<p><%= link_to "Back", articles_path %></p>
